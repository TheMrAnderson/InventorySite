<!DOCTYPE html>
<html>

<head>
	<%- include('./partials/head'); %>
</head>

<body class="invBody">
	<header>
		<%- include('./partials/nav'); %>
	</header>

	<main class="shopingList">
		<table>
			<tr>
				<th>Item Number</th>
				<th>Description</th>
				<th>Qty</th>
				<th>Type</th>
				<th>Min Qty</th>
				<th>Mfg Part</th>
				<th>Location</th>
				<th>URL</th>
			</tr>

			<% for (var i=0; i < data.length; i++) { %>
				<tr>
					<td>
						<%= data[i].ItemNumber %>
					</td>
					<td>
						<a href="/addUpdate?itemNumber=<%= data[i].ItemNumber %>">
							<%= data[i].Description %>
						</a>
					</td>
					<td>
						<%= data[i].CurrentQty %>
					</td>
					<td>
						<%= data[i].InventoryType===0 ? 'Piece' : 'Bulk' %>
					</td>
					<td>
						<%= data[i].MinQty %>
					</td>
					<td>
						<%= data[i].Manufacturer + ' ' + data[i].PartNumber %>
					</td>
					<td>
						<%= data[i].Location %>
					</td>
					<td>
						<a href="<%= data[i].SourceURL %>">
							<%= data[i].SourceURL=='' ? '' : 'Link' %>
						</a>
					</td>
				</tr>
				<% } %>
		</table>
	</main>
</body>

</html>